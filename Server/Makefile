PKG_DIR		=	$(HOME)/Golgi-Pkg/LATEST/
JDK_BIN		=	/Library/Java/Home/bin/
JRE_BIN		=	/Library/Java/Home/bin/
JDK_BIN		=	/usr/bin
JRE_BIN		=	/usr/bin

LIB_JARS	=	libs/commons-io-2.4.jar:libs/commons-lang3-3.3.2.jar:libs/commons-logging-1.1.3.jar:libs/httpclient-4.3.3.jar:libs/httpcore-4.3.2.jar:libs/log4j-1.2.17.jar:libs/quick-json-1.0.2.3.jar:libs/twitter4j-core-4.0.2.jar

JAVAC		=	$(JDK_BIN)/javac
JAVA		=	$(JRE_BIN)/java
JAR		=	$(JDK_BIN)/jar
CLASSPATH	=	$(PKG_DIR)/common/garrick_combined.jar:$(PKG_DIR)/common/golgi_j2se.jar:$(LIB_JARS)
JO_DIR		=	src/io/golgi/twipwire/gen

all:
	mkdir -p $(JO_DIR)
	$(JAVA) -classpath $(CLASSPATH) com.openmindnetworks.golgi.garrick.Garrick -i ../TwipWire.thrift  -jo $(JO_DIR)
	$(JAVAC) -d bin -classpath $(CLASSPATH) src/io/golgi/twipwire/gen/*.java src/io/golgi/twipwire/*.java
	$(JAR) -Mcf TwipWire.jar -C bin .

clean:
	@
	@find . -name '*.java' | while read f; do if [ `head -2 $$f | egrep -c "IS_AUTOGENERATED_SO_ALLOW_AUTODELETE=YES"` = "1" ]; then echo "Delete $$f"; rm -f $$f; fi; done
	@find . -name '*.class' | xargs rm
	@find . -name '*~' | xargs rm
	@rm -f TwipWire.jar

spotless:clean
	@rm -rf apache-log4j-* httpcomponents-client-*


RTCP	=	 TwipWire.jar:$(PKG_DIR)/common/golgi_j2se.jar:$(LIB_JARS)

run:all 
	@if [ ! -f ../Twitter.Credentials ]; then \
		echo "No Twitter.Credentials in top level directory"; \
		exit -1; \
	fi
	$(JAVA) -classpath $(RTCP) io.golgi.twipwire.Server -devKey `cat ../Golgi.DevKey` -appKey `cat ../Golgi.AppKey` `cat ../Twitter.Credentials`


